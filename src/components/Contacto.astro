---
const { id } = Astro.props;
---

<section id={id}>
  <form id="contactoForm" class="container otros flex flex-col gap-5">
    <h2 class="text-3xl sm:text-4xl">Contacto</h2>
    <div class="flex md:flex-row flex-col gap-4 w-full">
      <div class="w-full flex flex-col md:gap-x-4">
        <label for="nombre">Nombre</label>
        <input type="text" id="nombre" name="nombre" class="w-full" required />
      </div>
      <div class="w-full flex flex-col">
        <label for="telefono">Tel√©fono</label>
        <input
          type="text"
          id="telefono"
          name="telefono"
          class="w-full"
          required
        />
      </div>
    </div>
    <div class="flex flex-col w-full">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />
    </div>
    <div class="flex flex-col w-full">
      <label for="mensaje">Mensaje</label>
      <textarea id="mensaje" name="mensaje" class="min-h-24" required
      ></textarea>
    </div>
    <input
      type="submit"
      class="bg-[#547498] hover:bg-[#39608d] transition ease-in-out duration-200 w-full cursor-pointer my-4 px-5 py-3 sm:px-10 sm:py-3 rounded-xl text-base sm:text-lg text-white"
      value="Enviar"
    />
  </form>
</section>

<style>
  input:not([type="submit"]),
  textarea {
    background-color: #f1eee8;
    border-radius: 0.7rem;
    padding: 10px 15px;
    border: 1px solid #846f54;
    outline: none;
  }

  textarea {
    resize: none;
    field-sizing: content;
  }

  label {
    padding: 5px 0;
  }
</style>

<script>
  const contactoForm = document.getElementById("contactoForm");

  contactoForm.addEventListener("submit", (e) => {
    e.preventDefault();
  });
</script>
