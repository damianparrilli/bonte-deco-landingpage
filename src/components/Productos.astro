---
import Slider1 from "./components_productos/Slide1.astro";
import Slider2 from "./components_productos/Slide2.astro";
import Slider3 from "./components_productos/Slide3.astro";
import Slider4 from "./components_productos/Slide4.astro";

const { id } = Astro.props;
---

<section id={id} class="overflow-hidden">
  <div class="container">
    <h2 class="text-3xl sm:text-4xl">Productos destacados</h2>
    <div
      data-hs-carousel='{
    "loadingClasses": "opacity-0",
    "dotsItemClasses": "hs-carousel-active:bg-[#B99F91] hs-carousel-active:border-none size-3 border border-none bg-[#B4BFC5] rounded-full cursor-pointer",
    "slidesQty": {
      "xs": 1,
      "lg": 2
    }
  }'
      class="relative"
    >
      <div class="hs-carousel w-full overflow-hidden">
        <div class="relative min-h-[50dvh] md:min-h-[60vh] -mx-1">
          <div
            class="hs-carousel-body hs-carousel:dragging:transition-none absolute top-0 bottom-0 start-0 flex flex-nowrap gap-2 opacity-0 transition-transform duration-700"
          >
            <Slider1 />
            <Slider2 />
            <Slider3 />
            <Slider4 />
          </div>
        </div>
      </div>
      <button
        type="button"
        class="hs-carousel-prev hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none inset-y-0 start-0 inline-flex justify-center items-center max-[640px]:hidden absolute -ml-12 w-[46px] h-full text-gray-800 hover:bg-gray-800/10 focus:outline-none focus:bg-gray-800/10 rounded-s-lg dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10"
      >
        <span class="text-2xl" aria-hidden="true">
          <svg
            class="shrink-0 size-6"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m15 18-6-6 6-6"></path>
          </svg>
        </span>
        <span class="sr-only">Previous</span>
      </button>
      <button
        type="button"
        class="hs-carousel-next hs-carousel-disabled:opacity-50 hs-carousel-disabled:pointer-events-none absolute max-[640px]:hidden inset-y-0 end-0 inline-flex justify-center items-center w-[46px] -mr-12 h-full text-gray-800 hover:bg-gray-800/10 focus:outline-none focus:bg-gray-800/10 rounded-e-lg dark:text-white dark:hover:bg-white/10 dark:focus:bg-white/10"
      >
        <span class="sr-only">Next</span>
        <span class="text-2xl" aria-hidden="true">
          <svg
            class="shrink-0 size-6"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </span>
      </button>
      <div
        class="hs-carousel-pagination flex justify-center absolute -bottom-10 start-0 end-0 space-x-2"
      >
      </div>
    </div>
  </div>
</section>


