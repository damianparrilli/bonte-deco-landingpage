---
import Header from "../components/Header.astro";
import Banner from "../components/Banner.astro";
interface Props {
  title: string;
  description: string;
  keywords?: string;
}

const { title, description, keywords } = Astro.props;
const isHomePage = new URL(Astro.request.url).pathname === "/";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="kewords" content={keywords} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Italiana&family=Mukta:wght@200;300;400;500;600;700;800&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-[#f9f9f9] overflow-auto">
    {isHomePage && <Banner />}
    <Header />
    <slot />
    <script src="/scripts/preline.js" is:client></script>
  </body>
</html>
<style is:global>
  :root {
  }

  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    color: #3c2c0b;
    scroll-behavior: smooth;
  }

  html {
    scrollbar-gutter: stable;
    font-family: "Plus Jakarta Sans", sans-serif;
    text-wrap: pretty;
  }

  section {
    width: 100%;
    padding: 125px 5%;
  }

  .container {
    max-width: 1750px;
    margin: 0 auto;
  }

  .container.otros {
    max-width: 1250px;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Italiana", sans-serif !important;
  }

  h2 {
    -webkit-text-stroke: 0.5px #3c2c0b;
    margin-bottom: 45px;
  }

  h3 {
    color: #373535;
    -webkit-text-stroke: 0.5px #373535;
  }

  h3 {
  }

  code {
  }
</style>
